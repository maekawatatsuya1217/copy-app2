<div class="lists_box">

  <div class="task_box">
    <h1>Todo List</h1>
    <table>
      <tr>
        <th>Title</th><th>Description</th><th></th><th></th><th></th>
      </tr>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task_path(task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task_path(task), method: :delete %></td>
      </tr>
      <% end %>
    </table>
    <p><%= link_to 'ToDoの作成', new_task_path %></p>
  </div>

  <div class="advice_box">
    <h1>Advice List</h1>
    <table>
      <tr>
        <th>Advice</th><th>Description</th><th></th><th></th><th></th>
      </tr>
      <% @advices.each do |advice| %>
      <tr>
        <td><%= advice.title %></td>
        <td><%= advice.description %></td>
        <td><%= link_to 'Show', advice_path(advice) %></td>
        <td><%= link_to 'Edit', edit_advice_path(advice) %></td>
        <td><%= link_to 'Delete', advice_path(advice), method: :delete %></td>
      </tr>
      <% end %>
    </table>
    <p><%= link_to 'Adviceの作成', new_advice_path %></p>
  </div>

  <div class="memo_box">
  <h1>Memo List</h1>
    <table>
      <tr>
        <th>Title</th><th>Description</th><th></th><th></th><th></th>
      </tr>
      <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.title %></td>
        <td><%= memo.description %></td>
        <td><%= link_to 'Show', memo_path(memo) %></td>
        <td><%= link_to 'Edit', edit_task_path(@tasks) %></td>
        <td><%= link_to 'Delete', task_path(@tasks), method: :delete %></td>
      </tr>
      <% end %>
    </table>
    <p><%= link_to 'Memoの作成', new_memo_path %></p>
  </div>

</div>