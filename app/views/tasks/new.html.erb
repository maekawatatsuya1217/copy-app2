<div class="main">
  <div class="inner">
    <div class="form_wrapper">     
      <h1 class="page_heading">Create Todo</h1>
      <div class="create_box">
        <%= form_for(@task) do |f| %>

          <%= render 'devise/shared/error_messages', model: f.object %>
        
        <div class="aform_text">
          <%= f.label :title %>
          <%= f.text_field :title, size: 50, class: :form_text %>
        </div>

        <div class="form_gap"></div>

        <div class="aform_text">
          <%= f.label :description %>
          <%= f.text_area :description, class: :form_text %>
        </div>

        <div class="form_gap"></div>
        
          <%= f.submit 'Submit', class: :form_btn %>
        <% end %>
      </div>
      <p><%= link_to '一覧に戻る', tasks_url, class: :form_btn %></p>
    </div>
  </div>
</div>